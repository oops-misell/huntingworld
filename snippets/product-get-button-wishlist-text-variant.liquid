{%- if customer and customer.metafields.wishlist -%}
    {%- for item in customer.metafields.wishlist -%}
        {%- assign wishlist_id = item[0] | abs -%}
        {%- assign wishlist_handle = item[1] -%}
        {%- if current_variant_id == wishlist_id and product.handle == wishlist_handle -%}
            {%- assign present_in_wishlist = true -%}
        {%- endif -%}
    {%- endfor -%}
{%- endif -%}
<div   class="btn btn--text btn--status px-md-0 js-store-lists-add-wishlist"
    {% if present_in_wishlist %} data-button-status="added"{% endif %}>
    <span class="d-flex flex-center item_add_to_wishlist" data-title="{{ 'products.product.add_to_widhlist.title' | t }}" title="{{ 'products.product.add_to_widhlist.title' | t }}"><i class=" mb-1">{% render 'icon-theme-180' %}</i></span>
    <span class="d-flex flex-center item_added_to_wishlist" data-button-content="added" data-title="{{ 'products.product.add_to_widhlist.added' | t }}" title="{{ 'products.product.add_to_widhlist.added' | t }}"><i class=" mb-1">{% render 'icon-theme-181' %}</i></span>
</div>
{%- assign present_in_wishlist = false -%}
