{% comment %}
  セクション: Brand Silver Tug スタイル
  説明: Brand Silver Tugページ用のカスタムCSSスタイルを適用するためのセクション
{% endcomment %}

<style>
  {%- if section.settings.custom_css -%}
    {{ section.settings.custom_css }}
  {%- endif -%}
</style>

{% schema %}
{
  "name": "Brand Silver Tugスタイル",
  "settings": [
    {
      "type": "textarea",
      "id": "custom_css",
      "label": "カスタムCSS",
      "default": "/* ナビメニューを非表示にする */\n.header__menu-btn,\n.header__content,\n.header-wrapper--border-bottom,\n.header__spacer,\n.breadcrumbs {\n  display: none !important;\n}\n\n/* メインコンテンツの余白を削除 */\n.main-page-content {\n  margin-top: 0 !important;\n  padding-top: 0 !important;\n}\n\n/* ページ幅の制限を解除 */\n.page-width {\n  padding: 0;\n  max-width: none;\n}"
    }
  ]
}
{% endschema %}
