{% comment %}
  セクション: Brand Silver Tug
  説明: ナビメニューを非表示にし、100lvhのヒーローセクションを持つカスタムテンプレート
{% endcomment %}

<div class="brand-silver-tug-section" style="height: 100lvh; width: 100%; position: relative;">
  {%- if section.settings.image != blank -%}
    {% assign image_height = 1080 %}
    {% assign image_width = 1920 %}
    <img
      src="{{ section.settings.image | image_url: width: 2000 }}"
      alt="{{ section.settings.image.alt | escape }}"
      loading="eager"
      width="{{ image_width }}"
      height="{{ image_height }}"
      style="width: 100%; height: 100%; object-fit: cover;"
    >
  {%- endif -%}
  
  <div class="content-wrapper" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center;">
    {%- if section.settings.heading != blank -%}
      <h1 class="h1">
        {{ section.settings.heading | escape }}
      </h1>
    {%- endif -%}
    
    {%- if section.settings.text != blank -%}
      <div class="rte">
        {{ section.settings.text }}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Brand Silver Tug",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "背景画像"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "見出し",
      "default": "Brand Silver Tug"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "テキスト"
    }
  ],
  "presets": [
    {
      "name": "Brand Silver Tug"
    }
  ]
}
{% endschema %}
